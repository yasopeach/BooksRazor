@page
@model BooksDemoRazor.Pages.Books.DeleteModel
@{
}


<form method="post">
    <input hidden asp-for="Book.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Book</h2>
            <hr/>

        </div>
        
        <div class="mb-3">
            Title :
            <input disabled asp-for="Book.Title" type="text" name="title"/>
        </div>
        <div class="mb-3">
            Year :
            <input disabled asp-for="Book.PublishedYear" type="number" name="year">
        </div>

        <button class="m-lg-6" type="submit" style="width:150px">Delete</button>
    </div>
</form>
